<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="329.0" prefWidth="434.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab6.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TableView fx:id="table" editable="true" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="ageColumn" prefWidth="75.0" text="Age" />
        </columns>
    </TableView>

    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button fx:id="LoadButton" mnemonicParsing="false" onAction="#onLoadButtonClick" text="Load" />
            <Button fx:id="SaveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save" />
            <Button fx:id="SortButton" mnemonicParsing="false" text="Sort" />
            <Button fx:id="AddButton" onAction="#onAddButtonClick" text="Добавить" />
        </children>
    </HBox>
</VBox>
