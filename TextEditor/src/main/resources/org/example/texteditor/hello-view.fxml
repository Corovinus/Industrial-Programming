<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox id="mainTextField" alignment="CENTER" prefHeight="305.0" prefWidth="339.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.texteditor.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextArea id="mainTextArea" fx:id="mainTextArea" prefHeight="200.0" prefWidth="200.0" />
    <TextField fx:id="mainTextField" onAction="#setMainTextFieldEnter" />
    <Button id="mainButton" fx:id="mainButton" mnemonicParsing="false" onAction="#onHelloButtonClick" text="Добавить" />
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <Button fx:id="openButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openButtonClick" text="Открыть" />
         <Button fx:id="clearButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clearButtonClick" text="Очистить" />
         <Button fx:id="saveButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveButtonClick" text="Сохранить" />
     </buttons>
   </ButtonBar>
</VBox>
